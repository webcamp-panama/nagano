<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-lg-6'>
    <h3 class="mt-4"><strong>新規会員登録</strong></h3><br>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <div class="row">
          <div class="col">
            <%= f.label :last_name, "姓" %>
            <%= f.text_field :last_name, class:"form-control", autofocus: true, autocomplete: "given-name", placeholder: "令和" %>
          </div>
          <div class="col">
            <%= f.label :first_name, "名" %>
            <%= f.text_field :first_name, class:"form-control", autofocus: true, autocomplete: "family-name", placeholder: "道子" %>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <div class="row">
          <div class="col">
            <%= f.label :last_name_kana, "セイ" %>
            <%= f.text_field :last_name_kana, class:"form-control", placeholder: "レイワ" %>
          </div>
          <div class="col">
            <%= f.label :first_name_kana, "メイ" %>
            <%= f.text_field :first_name_kana, class:"form-control", placeholder: "ミチコ" %>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
      </div>

      <div class="mb-3">
        <%= f.label :postcode, "郵便番号（ハイフンなし）" %>
        <%= f.text_field :postcode, class:"form-control", autocomplete: "postal-code", placeholder: "000000" %>
      </div>

      <div class="mb-3">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address, class:"form-control", placeholder: "東京都渋谷区代々木神園町0-0" %>
      </div>

      <div class="mb-3">
        <%= f.label :phone_number, "電話番号（ハイフンなし）" %>
        <%= f.text_field :phone_number, class:"form-control", placeholder: "000000" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "パスワード（6文字以上）" %>
        <% if @minimum_password_length %>
        <!--<em>%= @minimum_password_length %></em>-->
        <% end %>
        <%= f.password_field :password, class:"form-control", autocomplete: "new-password" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
        <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password" %>
      </div><br>

      <div class="mb-3">
        <%= f.submit "新規登録", class:"btn btn-outline-success btn-block" %>
      </div><br>
    <% end %>

     <div class="mb-3">
       <%= render "public/shared/links" %>
     </div>
    </div>
  </div>
</div>
