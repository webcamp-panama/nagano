<h1>配送先編集</h1>

<%= form_with model: @delivery, url: public_delivery_path(@delivery), method: :patch, local:true do |f| %>
  <div class="form-group">
    <%= f.label :郵便番号 %>(ハイフンなし)
    <%= f.text_field :postcode %>
  </div>

   <div class="form-group">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>

  <div class="form-group">
    <%= f.label :宛名 %>
    <%= f.text_field :name %>
  </div>

  <div>
     <%= f.submit "変更内容を保存", class:"btn btn-outline-success btn-block" %>
  </div>
<% end %>












