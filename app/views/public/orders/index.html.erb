<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-lg-6'>
        <h2 class="mt-4"><strong>注文履歴一覧</strong></h2><br>


      <table class='table table-hover table-inverse'>
        <thead class="table-secondary" >
          <tr class="border border-secondary" >
             <th class="border border-secondary" >注文日</th>
             <th class="border border-secondary" >配送先</th>
             <th class="border border-secondary" >注文商品</th>
             <th class="border border-secondary" >支払金額</th>
             <th class="border border-secondary" >ステータス</th>
             <th class="border border-secondary" >注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
             <td class="border border-secondary" ><%= order.created_at %></td>
             <td class="border border-secondary" ><%= order.postcode %></td>
             <td class="border border-secondary" ><%= order.item %></td>
             <td class="border border-secondary" ><%= order.total_payment %></td>
             <td class="border border-secondary" ><%= order.status %></td>
             <td class="border border-secondary" ><%= link_to '表示する', public_order_path(order_params), method: :post, class: "btn btn-primary" %></td>
          <% end %>
        </tbody>
      </tabele>
        <div class="row">
          <div class="col-12 d-flex justify-content-center  mt-5 ">
            <p><%= paginate @orders %></p>
          </div>
        </div>
     </div>
  </div>
 </div>