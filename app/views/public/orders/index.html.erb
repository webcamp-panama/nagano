 <div class="container">
  <div class="row mt-5">
    <div class="col-xl-10">
      <h4><strong>注文履歴一覧</strong></h4><br>
    </div>
  </div>

  <div class="row">
    <table class='table table-bordered'>
      <thead class="table-secondary">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td><%= "〒" + order.postcode %><br>
                <%= order.address %>
                <%= order.name %>
            </td>
            <td>
              <%= order.item %>
            </td>
            <td>
              <%= order.total_payment %>
            </td>
            <td><%= link_to '表示する', public_order_path(order_params), method: :post, class: "btn btn-primary" %></td>

          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="row">
      <div class="col-12 d-flex justify-content-center  mt-5 ">
        <p><%= paginate @orders %></p>
      </div>
    </div>
  </div><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>