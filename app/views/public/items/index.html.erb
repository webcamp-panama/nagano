<div class="container">

  <div class="row">
    <div class="col-12 mt-4 mb-4">
       <h3><strong>商品一覧</strong> (全 <%= @total_items %> 件)</h3><br>
    </div>
  </div>


  <div class="row">
    <% @items.each do |item| %>
    <div class="col-4 mb-4">
      <div class="card-group">
        <div class="card">
          <%= link_to public_item_path(item), class:"card-img-top" do %>
            <%= image_tag item.image, size: "250x250", class:"card-img-top" %>
          <% end %>
          <div class="card-body">
            <%= item.name%><br>
            <%= item.add_tax_on_price.to_s(:delimited) %>円
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-12 d-flex justify-content-center  mt-5 ">
      <%= paginate @items %>
    </div>
  </div><br>