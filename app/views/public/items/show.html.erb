<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @item.get_image(300,300) %>
    </div>

    <div class="col-md-8">
      <h1><%= @item.name %></h1>
      <p><%= @item.introduction %></p>
      <h2>￥<%= @item.add_tax_sales_price.to_s(:dalimited) %>(税込)</h2>

      <% if @item.selling_status == TRUE %>
        <%= form_with model: @cart_item, url: public_cart_items_path, do |f| %>
          <%= f.select :number, [["1個",1],["2個",2],["3個",3],["4個",4],["5個",5],["6個",6],["7個",7],["8個",8],["9個",9]] %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <%= f.submit "カートに入れる", class="btn btn-success" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>