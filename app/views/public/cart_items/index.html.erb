<h3>ショッピングカート</h3>
<%= button_to "カートを空にする", destroy_all_public_cart_items_path, method: :delete %>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= image_tag cart_item.image, size:'50x50' %>
        <%= cart_item.name %>
      </td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td>
        <%= f.collection_select :quantity %>
        <%= link_to '変更', public_cart_items_path %>
      </td>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to '削除する', pudlic_cart_item_path(@cart_item_id), method: :delete %></td>
    </tr>
    <% end %>
    <%# @合計金額 +=  cart_item.subtotal %>
    <%= link_to '買い物を続ける', public_items_path %>
    <%= link_to '入力情報に進む', new_public_order_path %>
  </tbody>
</table>