<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_item.each do |item| %>
    <tr>
      <td>
        <%= image_tag item.image, size:'50x50' %>
        <%= item.name %>
      </td>
      <td><%= item.price %></td>
      <td></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.subtotal %></td>
          <% @合計金額 +=  cart_item.subtotal %>
    </tr>
    <% end %>
  </tbody>
</table>