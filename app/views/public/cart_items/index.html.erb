<h3>ショッピングカート</h3>
<table class='table table-hover table-inverse'>
  <%= button_to "カートを空にする", destroy_all_public_cart_items_path, method: :delete, class: "btn btn-danger btn-sm" %>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% total = 0 %>
    <% if current_customer.cart_items.present? %>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.image, size:'50x50' %>
            <%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.add_tax_on_price.to_s(:delimited) %>円</td>
          <td>
            <%= form_with model: cart_item, url: public_cart_item_path(cart_item), local: true, method: :patch do |f| %>
              <%= f.select :quantity, [["1個",1],["2個",2],["3個",3],["4個",4],["5個",5],["6個",6],["7個",7],["8個",8],["9個",9]] %>
              <%= f.submit "変更", class: "btn btn-success" %>
            <% end %>
          </td>
          <td>
            <%#= total = （（cart_item.item.price*cart_item.quantity)*1.10)to_i %>
            <%= total %>
          </td>
          <td><%= link_to '削除する', public_cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
        </tr>
          <%# total += subtotal %>
      <% end %>
      <tr>
        <th>合計金額</th>
        <td><%= total %></td>
      </tr>
      <tr>
        <td><%= link_to '買い物を続ける', public_items_path %></td>
        <td><%= link_to '入力情報に進む', new_public_order_path %></td>
      </tr>
      <%# @合計金額 +=  cart_item.subtotal %>
    <% end %>
  </tbody>
</table>