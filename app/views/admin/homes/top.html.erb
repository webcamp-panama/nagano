<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>

      <h3 class="mt-4"><strong>注文履歴一覧</strong></h3><br>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to l customer.created_at, admin_order_path(order) %></td>
              <td><%= link_to customer.full_name %></td>
              <td><%= item.count %></td>
              <td><%= status.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

  <div class="row">
    <div class="col-12 d-flex justify-content-center  mt-5 ">
      <%= paginate @orders %>
    </div>
  </div>