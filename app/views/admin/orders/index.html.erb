<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-lg-6'>
        <div> 注文履歴一覧</div>


      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
             <th>購入日時</th>
             <th>購入者</th>
             <th>注文個数</th>
             <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order.each do |order| %>
             <td><%= order.created_at %></td>
             <td><%= order.customer.name %></td>
             <td><%= order.quantity %></td>
             <td><%= order.status %></td>
             <% if item.is_active == true %>
              <td>入金待ち</td>
              <% else %>
              <td>入金確認</td>
             <% end %>

          <% end %>
        </tbody>
      </tabele>
        <div class="row">
          <div class="col-12 d-flex justify-content-center  mt-5 ">
            <p><%= paginate @order %></p>
          </div>
        </div>
     </div>
  </div>
 </div>