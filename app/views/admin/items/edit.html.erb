<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <h2>商品編集</h2>

              <h3>商品画像</h3>
                <%#= image_tag item.customer.get_profile_image %>
             <%= form_with model: @item, url: admin_item_path , local: true do |f| %>
              <div>
                <%= f.file_field :image, accept: "image/*" %>
              </div>

               <br>
              <div class="field">
                 <%= f.label :商品目 %><br />
                 <%= f.text_field :name, size: "40x20" %>
              </div>
              <div class="field">
                  <%= f.label :商品説明 %><br />
                  <%= f.text_area :introduction, size: "50x10" %>
              </div>
              <div class="field">
                  <%= f.label :ジャンル %><br />
                  <%= f.collection_select :genre_id, Genre.all, :id, :name %>

              </div>
               <div class="field">
                  <%= f.label :税抜価格 %><br />
                  <%= f.text_field :price,  size: "40x20"  %><div>円</div>

                  <%#= @item.add_tax_price.to_s(:dalimited) %>
              <br />
              </div>
              <div class="field">
                <%= f.label :販売ステータス %><br />

                 <%= f.radio_button :is_active, :true %>
                  <%= f.label :is_active, "販売中" %>
                  <%= f.radio_button :is_active, :false %>
                  <%= f.label :is_active, "販売停止中" %><br />

              </div>
              <div>
                  <%= f.submit "変更を保存", class: 'btn btn-success' %>
               </div>
             <% end %>


    </div>
  </div>
</div>





<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-lg-6'>
      <h2 class="mt-4"><strong>商品編集</strong></h2><br>


      <div class="mb-3">
        <%#= image_tag item.customer.get_profile_image %>
        <%= form_with model: @item, url: admin_item_path , local: true do |f| %>
        <%= f.label :image, "商品画像" %>
        <%= f.file_field :image, accept: "image/*", class:"form-control-file" %>
      </div>

      <div class="mb-3">
        <%= f.label :name, "商品名" %>
        <%= f.text_field :name, class:"form-control", placeholder: "商品名" %>
      </div>

      <div class="mb-3">
        <%= f.label :introduction, "商品説明" %>
        <%= f.text_area :introduction, class:"form-control", placeholder: "商品説明" %>
      </div>

      <div class="mb-3">
        <%= f.label :genre, "ジャンル　　" %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, class:"form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :price, "税抜価格" %><br />
        <%= f.text_field :price, class:"form-control", placeholder: "1000" %> 円
      </div>

      <div class="mb-3">
        <%#= @item.add_tax_price.to_s(:dalimited) %>
        <%= f.label :is_active, "販売ステータス　　" %>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "販売中　　" %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "販売停止中" %>
      </div>

      <div class="mb-3">
          <%= f.submit "変更の保存", class:"btn btn-success btn-block" %>
      </div>
     <% end %>
    </div>
  </div>
</div>