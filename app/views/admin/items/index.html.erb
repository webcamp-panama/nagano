<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
       <h1>商品一覧</h1>

            <table class='table table-hover table-inverse'>
                <thead>
                    <tr>
                        <th>商品ID</th>
                        <th>商品名</th>
                        <th>税抜価格</th>
                        <th>ジャンル</th>
                        <th>ステータス</th>
                    </tr>
                </thead>

                <tbody>
                   <% @items.each do |item| %>
                         <td><%= item.id %> </td>
                         <td><%= link_to item.name, admin_item_path(item) %> </td>
                         <td><%= item.price %> </td>
                         <td><%= item.genre.name %></td>
                         <% if item.is_active == true %>
                         <td>販売中</td>
                         <% else %>
                         <td>販売停止中</td>
                         <% end %>
                   <% end %>
                </tbody>
            </table>

         <p><%= paginate @items %></p>
    </div>
  </div>
</div>







