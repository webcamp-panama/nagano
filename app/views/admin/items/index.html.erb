<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>

      <h3 class="mt-4"><strong>商品一覧</strong></h3><br>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path %></td>
              <td><%= item.tax_off_price %></td>
              <td><%= item.genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @items %>

