<div class='container'>
   <h1>商品詳細</h1>

    <div class=“row”>
     <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>



     <table>


          <tr>
              <span>商品名 </span>
             <div>
               <%= @item.name %>
             </div>

             <div>
               <%= @item.introduction %>
             </div>
             <div>
               <%= @item.genre.name %>
             </div>
             <div>
               <%= @item.price %>円
             </div>
             <div>

                 <% if @item.is_active == true %>
                 <div class="text-success" >販売中</div>
                 <% else %>
                 <div>販売停止中</div>
                 <% end %>
              </div>
          </tr>
               <%= link_to "編集する", edit_admin_item_path, class: 'btn btn-success' %>
     </table>

        </div>
      </div>
    </div>
  </div>
  </div>









































